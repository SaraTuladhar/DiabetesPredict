<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:background="@drawable/homepage_back"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:layout_centerInParent="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age:"
            android:textColor="@color/Black"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
             />

        <EditText
            android:id="@+id/ageInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:hint="Years"
            android:inputType="number"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Glucose:"
            android:textColor="@color/Black"
            android:textSize="18sp"
            
            android:layout_marginTop="30dp"/>

        <EditText
            android:id="@+id/glucoseInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="(70-140) in mg/dL"
            android:inputType="numberDecimal"
            
            android:layout_marginTop="30dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pedigree Function:"
            android:textColor="@color/Black"
            android:textSize="18sp"
            
            android:layout_marginTop="30dp"
            />

        <EditText
            android:id="@+id/dpfInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint=""
            android:inputType="numberDecimal"
            
            android:layout_marginTop="30dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood Pressure :"
            android:textColor="@color/Black"
            android:textSize="18sp"
            
            android:layout_marginTop="30dp"/>


        <EditText
            android:id="@+id/bpInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="(Systolic 100-120) in mm Hg"
            android:inputType="number"
            
            android:layout_marginTop="30dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Body Mass Index:"
            android:textColor="@color/Black"
            android:textSize="18sp"
            
            android:layout_marginTop="30dp"/>

        <EditText
            android:id="@+id/bmiInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="(16-25) Kg/cm "
            android:inputType="number"
            
            android:layout_marginTop="30dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skin Fold Thickness:"
            android:textColor="@color/Black"
            android:textSize="17sp"
            
            android:layout_marginTop="30dp"/>

        <EditText
            android:id="@+id/skinThickInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="(20-40) mm"
            android:inputType="number"
            
            android:layout_marginTop="30dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insulin:"
            android:textColor="@color/Black"
            android:textSize="18sp"
            
            android:layout_marginTop="30dp"/>

        <EditText
            android:id="@+id/insulinInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint='(174) pmolperL or less'
            android:inputType="numberDecimal"
            
            android:layout_marginTop="30dp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No. of Pregnancy:"
            android:textColor="@color/Black"
            android:textSize="18sp"
            
            android:layout_marginTop="30dp"/>

        <EditText
            android:id="@+id/pregnancyInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:hint="Enter 0 if you are male"
            android:inputType="number"
            android:textColor="@color/Black"
            android:layout_marginTop="30dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender:"
            android:textColor="@color/Black"
            android:textSize="18sp"
            
            android:layout_marginTop="30dp"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                tools:ignore="MissingConstraints"
                android:checked="true"
                android:layout_marginTop="30dp"/>

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                app:layout_constraintStart_toEndOf="@+id/radioButton"
                app:layout_constraintTop_toBottomOf="@+id/dpfInput"
                
                android:layout_marginTop="30dp"/>

        </RadioGroup>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/tobmicalc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorAccent"
            android:text="Calculate BMI"
            android:textColor="@color/White"
            android:textColorHint="@color/White"
            
            android:layout_marginTop="30dp"/>
        <Button
            android:id="@+id/predictButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:text="Predict"
            android:textColor="@color/White"
            android:textSize="15sp"
            
            android:layout_marginTop="30dp"/>

    </LinearLayout>


</LinearLayout>

